<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace配置为数据访问层的接口的 包名.接口名称  -->
<mapper namespace="com.oracle.mapper.UsersMapper">
    <!--登录时查询，所以使用select标签  id的值为UsersMapper中方法的名称userLogin
        返回的类型为Users为实体类com.oracle.entity.Users
        参数的类型为Users为实体类com.oracle.entity.Users
        Users userLogin(Users user);
     -->

    <!--登录时查询，所以使用select标签  id的值为UsersMapper中方法的名称userLogin
        返回的类型为HashMap为实体类java.util.HashMap
        参数的类型为Users为实体类com.oracle.entity.Users
        Users userLogin(Users user);
     -->

    <select id="userLogin" resultType="java.util.HashMap" parameterType="com.oracle.entity.Users">
	 	SELECT u.*,r.rolename
		FROM users u INNER JOIN role r
		ON u.roleid = r.id
		WHERE u.uname = #{uname} AND u.upass = #{upass}
	 </select>

    <!-- 分页 -->
    <select id="getUserByPage" resultType="java.util.HashMap">
        <bind name="offset" value="page*pagesize-pagesize"/>
        SELECT u.*, r.rolename
        FROM users u
        left JOIN role r
        ON u.roleid = r.id
        where 1=1
        <if test="uname!=null and uname!=''">
            <bind name="u_name" value="'%'+uname+'%'"></bind>
            and u.uname like #{u_name}
        </if>
        <if test="roleid!=-1">
            and roleid = #{roleid}
        </if>

        limit #{offset}, #{pagesize}
    </select>

    <!-- 员工总行数 -->
    <select id="getTotalRow" resultType="int">
        select count(1) from users
        where 1=1
        <if test="uname!=null and uname!=''">
            <bind name="u_name" value="'%'+uname+'%'"></bind>
            and uname like #{u_name}
        </if>
        <if test="roleid!=-1">
            and roleid = #{roleid}
        </if>
    </select>

    <!-- 通过id删除一条数据 -->
    <delete id="delUserById">
	 	DELETE FROM users WHERE uid = #{uid}
	 </delete>

    <!-- 批量删除 -->
    <delete id="batchDelUsers">
        delete from users where uid in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 添加员工数据，即插入一条新数据 -->
    <insert id="addUsers" parameterType="com.oracle.entity.Users">
	 	insert into users values(null, #{uname}, #{upass}, #{udepartment}, #{realname}, #{roleid}, #{uimage})
	</insert>

    <!-- 通过ID获取员工信息 -->
    <select id="getUserById" resultType="com.oracle.entity.Users">
		SELECT * FROM users WHERE uid = #{id}
	</select>

    <!-- 通过id修改该员工数据 -->
    <update id="updateUsers" parameterType="com.oracle.entity.Users">
		UPDATE users SET uname=#{uname}, udepartment=#{udepartment}, realname=#{realname}, roleid=#{roleid}, uimage=#{uimage}
		WHERE uid=#{uid}
	</update>
</mapper>